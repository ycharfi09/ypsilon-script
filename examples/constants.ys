@main

# Test all Arduino constants and pin modes

config {
  board: arduino_uno,
  clock: 16MHz,
  uart: on,
  port: auto
}

const int BUTTON = 2
const int LED = 13

on start {
    pinMode(BUTTON, INPUT_PULLUP)
    pinMode(LED, OUTPUT)
}

on loop {
    mut int reading = digitalRead(BUTTON)
    
    # Test all constants
    if (reading == HIGH) {
        digitalWrite(LED, LOW)
    }
    
    if (reading == LOW) {
        digitalWrite(LED, HIGH)
    }
}


@main

# Button and LED Example
# Read button state and control LED using hardware types

config {
  board: arduino_uno,
  clock: 16MHz,
  uart: on,
  port: auto
}

# Hardware types with automatic setup
mut Button btn = new Button(2)
mut Led led = new Led(13)

on start {
    # No pinMode needed - hardware types handle it automatically
    print("Button control ready")
}

on loop {
    if (btn.pressed()) {
        led.on()
    } else {
        led.off()
    }
    
    wait 10ms
}

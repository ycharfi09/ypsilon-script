@main

# Blink Example - Classic Arduino LED Blink
# This demonstrates modern hardware types and timing

config {
  board: arduino_uno,
  clock: 16MHz,
  uart: on,
  port: auto
}

# Hardware type with automatic pinMode setup
mut Led led = new Led(13)

on start {
    # No pinMode needed - Led type handles it automatically
    print("Blink started")
}

on loop {
    led.on()
    wait 1s
    led.off()
    wait 1s
}


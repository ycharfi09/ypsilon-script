@main

# Serial Print Example
# Demonstrates Serial communication with hardware types

config {
  board: arduino_uno,
  clock: 16MHz,
  uart: on,
  port: auto
}

# Analog sensor with automatic setup
mut Analog sensor = new Analog(0)

on start {
    print("Starting sensor monitoring...")
    print("Reading analog values every 500ms")
}

on loop {
    mut int value = sensor.read()
    print("Sensor value:")
    print(value)
    wait 500ms
}

